<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionsVel1002"
    xmlns:math="http://www.w3.org/1998/Math/MathML">

    <Button
        android:id="@+id/answer1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="550dp"
        android:layout_marginEnd="25dp"
        android:text="@string/buttonplaceholder" />

    <Button
        android:id="@+id/answer2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="420dp"
        android:text="@string/buttonplaceholder" />

    <Button
        android:id="@+id/answer3"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="550dp"
        android:text="@string/buttonplaceholder" />

    <Button
        android:id="@+id/answer4"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="420dp"
        android:layout_marginEnd="25dp"
        android:text="@string/buttonplaceholder" />

    <TextView
        android:id="@+id/questionField"
        android:layout_width="wrap_content"
        android:layout_height="114dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="135dp"
        android:layout_marginEnd="90dp"
        android:fontFamily="@font/romanserif"
        android:ems="10"
        android:gravity="center|clip_horizontal"
        android:text="@string/defaultTextPlaceholder" />


    <TextView
        android:id="@+id/questionNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="160dp"
        android:layout_marginTop="99dp"
        android:text="Question 1/10" />

    <TextView
        android:id="@+id/timeleft"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="306dp"
        android:layout_marginEnd="150dp"
        android:text="x" />

</RelativeLayout>